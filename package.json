{
  "name": "@kenrick95/c4",
  "version": "3.0.5",
  "description": "Connect Four game",
  "main": "./dist/lib.js",
  "private": true,
  "workspaces": [
    "core",
    "browser",
    "server"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kenrick95/c4.git"
  },
  "author": {
    "name": "Kenrick",
    "email": "kenrick95@gmail.com",
    "url": "https://kenrick95.org"
  },
  "bugs": {
    "url": "https://github.com/kenrick95/c4/issues"
  },
  "homepage": "https://github.com/kenrick95/c4",
  "license": "MIT",
  "files": [
    "src/",
    "dist/"
  ],
  "scripts": {
    "start": "concurrently \"yarn:start-client\" \"yarn:start-server\"",
    "start-client": "parcel index.html",
    "start-server": "yarn workspace @kenrick95/c4-server start",
    "build": "yarn clean && parcel build index.html",
    "build-library": "yarn clean && parcel build ./core/lib.ts",
    "prettier": "prettier --write \"browser/**/*.?(ts|scss|css)\" \"core/**/*.?(ts|scss|css)\" \"server/**/*.?(ts|scss|css)\"",
    "prepublishOnly": "yarn build",
    "clean": "shx rm -rf dist/"
  },
  "keywords": [
    "c4",
    "connect-four",
    "game"
  ],
  "devDependencies": {
    "concurrently": "^5.1.0",
    "parcel-bundler": "^1.12.4",
    "prettier": "^2.0.4",
    "shx": "^0.3.2",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3"
  },
  "resolutions": {
    "minimist": "^1.2.2"
  }
}
