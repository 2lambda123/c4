    "strict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "target": "es5",
    "lib": ["es2015", "dom", "dom.iterable"]
  },
  "include": ["app.ts", "board/", "game/", "@kenrick95/c4-core"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
